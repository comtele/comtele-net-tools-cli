<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.1</TargetFramework>

    <PackAsTool>true</PackAsTool>
    <ToolCommandName>comtele</ToolCommandName>
    
    <Authors>Diego Vieira</Authors>
    <Company>Comtele</Company>
    <Version>1.0.1</Version>
    <Description>CLI para envio de mensagens utilizando a plataforma Comtele.</Description>
    <Product>Comtele CLI</Product>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageReleaseNotes>Correção das funções de regra de resposta automática.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Comtele.Sdk" Version="1.1.3" />
    <PackageReference Include="McMaster.Extensions.CommandLineUtils" Version="2.2.4" />
  </ItemGroup>

</Project>
